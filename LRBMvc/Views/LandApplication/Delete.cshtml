@model LRB.Lib.Domain.Application

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
@section Styles{
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />    
}
<table class="table table-bordered">
    <caption><h3>Application for Certificate of Ownership</h3></caption>
    <tbody>
        <tr>
            <td>Username</td>
            <td>@Html.DisplayNameFor(model => model.UserId)</td>
        </tr>
        <tr>
            <td>Full name</td>
            <td>@Html.DisplayFor(model => model.ContactPerson.FullName)</td>
        </tr>
        <tr>
            <td>Date Submitted</td>
            <td>@Html.DisplayNameFor(model => model.SubmissionDate)</td>
        </tr>
        <tr>
            <td>Application Status</td>
            <td class="success">@Html.DisplayFor(model => model.Status)</td>            
        </tr>
        <tr>
            <td>Application Number</td>
            <td>@Html.DisplayFor(model => model.SolaId)</td>            
        </tr>
    </tbody>
</table>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
