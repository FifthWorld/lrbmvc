@model LRB.Lib.Domain.Optional
<div class="col-md-3 col-sm-4 sidebar">
    <ul class="nav nav-stacked nav-pills list-group">
        <li class="list-group-item">@Html.RouteLink("Applicant's Information", "Default", new { action = "ContactInformation", controller = "LandApplication" })</li>
        <li class="list-group-item">@Html.RouteLink("Property Information", "Default", new { action = "PropertyInformation", controller = "LandApplication" }, new { @disabled = "disabled" })</li>
        <li class="list-group-item active">@Html.RouteLink("Additional Information", "Default", new { action = "OptionalInformation", controller = "LandApplication" }, new { @disabled = "disabled" })</li>
        <li class="list-group-item disabled">@Html.RouteLink("Document Uploads", "Default", new { action = "RequiredDocuments", controller = "LandApplication" }, new { @disabled = "disabled" })</li>
        <li class="list-group-item disabled">@Html.RouteLink("Confirmation Page", "Default", new { action = "Summary", controller = "LandApplication" }, new { @disabled = "disabled" })</li>
    </ul>
</div>

<div class="col-md-9 col-sm-8" id="personal_details">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Optional Information</legend>
            <p class="alert alert-info">The following fields are optional and can be skipped </p>
            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.StateofOrigin)
                @Html.DropDownListFor(model => model.StateofOrigin, new SelectList(new String[] { "Ondo", "Ogun", "Other" }), new { @class = "form-control" })    
                <span class="help-inline">@Html.ValidationMessageFor(model => model.StateofOrigin)</span>
            </div>

            <div class="form-group col-lg-4">
                <label>LGA </label>
                @Html.DropDownListFor(model => model.HomeTown, new SelectList(new String[] { "Ondo", "Ogun", "Other" }), new { @class = "form-control" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.HomeTown)</span>
            </div>
            <div class="form-group col-lg-8">
                <label>Employer's Name</label>
                @Html.TextBoxFor(model => model.EmployerName, new { @class = "form-control" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.EmployerName)</span>
            </div>
            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.Occupation)
                @Html.TextBoxFor(model => model.Occupation, new { @class = "form-control", @type = "text" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.Occupation)</span>
            </div>
            
            

            

        </fieldset>
        <fieldset>
            <legend>Office Address</legend>
            
            <div class="form-group col-lg-8">
                @Html.LabelFor(model => model.Street)
                @Html.TextBoxFor(model => model.Street, new { @class = "form-control", @type = "text" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.Street)</span>
            </div>

            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.Town)
                @Html.TextBoxFor(model => model.Town, new { @class = "form-control", @type = "text" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.Town)</span>
            </div>
            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.State)
                @Html.DropDownListFor(model => model.State, new SelectList(new String[] { "Ondo", "Ogun", "Other" }), new { @class = "form-control" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.State)</span>
            </div>
            <div class="form-group col-lg-4">
                @Html.LabelFor(model => model.LGA)
                @Html.DropDownListFor(model => model.LGA, new SelectList(new String[] { "Akure South", "Akure North", "Ore" }), new { @class = "form-control" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.LGA)</span>
            </div>            
        </fieldset>
        <div class="row">
                <div class="form-group pull-right col-lg-4">
                    @*<button class="btn btn-primary col-lg-offset-1">Previous</button>*@
                    <button type="submit" class="btn btn-primary col-lg-offset-1">Next</button>
                    <button class="btn btn-success">Save</button>
                    <button type="reset" class="btn btn-info">Clear Form</button>
                </div>
            </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
