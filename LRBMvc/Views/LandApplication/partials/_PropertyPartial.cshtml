@model LRB.Lib.Domain.Property

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Property</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Developed)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Developed)
            @Html.ValidationMessageFor(model => model.Developed)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CapacityofOwnership)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CapacityofOwnership, new SelectList(new String[] { "Inheritance", "Purchase" }), new { @class =""})
            @Html.ValidationMessageFor(model => model.CapacityofOwnership)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LandUse)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.LandUse, 
            new SelectList(new String[] { "Residential", "Commercial", "Agricultural", "Industrial" }), new { @class =""})
            @Html.ValidationMessageFor(model => model.LandUse)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PeriodofPossession)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PeriodofPossession)
            @Html.ValidationMessageFor(model => model.PeriodofPossession)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LandSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LandSize)
            @Html.ValidationMessageFor(model => model.LandSize)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}