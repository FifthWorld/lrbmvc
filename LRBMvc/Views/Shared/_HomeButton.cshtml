<div class="modal fade" id="HomeButton" tabindex="-1" role="dialog" aria-labelledby="HomeButton" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">What do you want to do</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-4">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a class="btn btn-default btn-lg" href="javascript:document.getElementById('logoutForm').submit()">Leave the Portal</a>
                    }
                </div>
                <div class="col-md-4">
                    @Html.RouteLink("Return to application portal", "Default", new { action = "Index", controller = "LandApplication" }, new { @class="btn btn-default btn-lg" })
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
