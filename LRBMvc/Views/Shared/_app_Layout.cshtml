<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ODSG Land Records Bureau - Applications</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <script type="text/javascript" src="~/Scripts/state_lga/chainedselects.js"></script>
    <script type="text/javascript" src="~/Scripts/state_lga/exampleconfig.js"></script>
    <script type="text/javascript" src="~/Scripts/state_lga/exampleconfig_property.js"></script>
    <link href="~/Content/modern-business.css" rel="stylesheet">
    
    @RenderSection("styles", required: false)

</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- You'll want to use a responsive image option so this logo looks good on devices - I recommend using something like retina.js (do a quick Google search for it and you'll find it) -->
                <a href="#HomeButton" class="navbar-brand" data-toggle="modal" data-target="#HomeButton">ODSG Land Records Bureau</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        @Html.Partial("_app_Loginpartial")
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->

    <div class="container" id="applicationDetails">

        <div class="row">
            @RenderBody()
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->


    <!-- Start of footer -->
    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; ODSG Land Records Bureau 2013</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- Bootstrap core JavaScript -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/modern-business.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    @Html.Partial("_TitleSearch")
    @Html.Partial("_HomeButton")
    @RenderSection("scripts", required: false)
    
    <script type="text/javascript">
        $('document').ready(function () {
            initListGroup('country2', document.forms[1]["State"], document.forms[1]["LGA"], document.forms[1].model)
            initListGroup('country', document.forms[1]["IState"], document.forms[1]["ILGA"], document.forms[1].model);
            initListGroup('country', document.forms[1]["StateofOrigin"], document.forms[1]["HomeTown"], document.forms[1].model);
        });
        $('span.field-validation-valid, span.field-validation-error').each(function () {
            $(this).addClass('help-inline');
        });
        $('form').submit(function () {
            if ($(this).valid()) {
                $(this).find('div.control-group').each(function () {
                    if ($(this).find('span.field-validation-error').length == 0) {
                        $(this).removeClass('error');
                    }
                });
            }
            else {
                $(this).find('div.control-group').each(function () {
                    if ($(this).find('span.field-validation-error').length > 0) {
                        $(this).addClass('error');
                    }
                });
            }
        });
        $('form').each(function () {
            $(this).find('div.control-group').each(function () {
                if ($(this).find('span.field-validation-error').length > 0) {
                    $(this).addClass('error');
                }
            });
        });
        
    </script>
    
</body>
</html>
